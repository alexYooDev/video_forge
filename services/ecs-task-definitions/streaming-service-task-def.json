{
  "family": "video-forge-streaming-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::901444280953:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::901444280953:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "streaming-service",
      "image": "901444280953.dkr.ecr.ap-southeast-2.amazonaws.com/video-forge-streaming-service:latest",
      "portMappings": [
        {
          "containerPort": 5001,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "PORT",
          "value": "5001"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-southeast-2"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:901444280953:parameter/video-forge/database/host"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:901444280953:parameter/video-forge/database/port"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:901444280953:parameter/video-forge/database/name"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:901444280953:parameter/video-forge/database/user"
        },
        {
          "name": "DB_SECRET_ARN",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:901444280953:parameter/video-forge/database/secret-arn"
        },
        {
          "name": "S3_BUCKET_NAME",
          "valueFrom": "arn:aws:ssm:ap-southeast-2:901444280953:parameter/video-forge/s3/bucket-name"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/video-forge-streaming-service",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:5001/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
